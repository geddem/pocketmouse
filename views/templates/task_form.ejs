<fieldset>
    <input placeholder="Task Name" type="text" tabindex="1" required autofocus name="name" value="<%=task.name%>">
</fieldset>
<fieldset>
    <input placeholder="Task Icon" type="text" tabindex="2" required name="icon" value="<%=task.icon%>">
</fieldset>
<fieldset>
    <textarea placeholder="Summary / Descriptions here" tabindex="3" name="description" required><%=task.description%></textarea>
</fieldset>
<fieldset>
    <textarea id="content_area" name="content"><%=task.content%></textarea>
</fieldset>
<fieldset>
    <button name="submit" type="submit" id="pocketmouse-submit" data-submit="...Sending">Submit</button>
</fieldset>





<script src="node_modules/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
tinymce.init({
  selector: '#content_area',
  promotion: false
});

</script>

